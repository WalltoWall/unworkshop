{
	"name": "unworkshop",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "bunx -b biome check . --fix",
		"format": "bunx -b biome format . --write",
		"dev:app": "cd ./packages/app && bun run dev",
		"dev:studio": "cd ./packages/studio && bun run dev",
		"app:types": "cd ./packages/app/ && bun run cf:types",
		"studio:types": "cd ./packages/studio && bun run schema && bun run types",
		"deploy:app": "cd ./packages/app && bun run deploy"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@typescript/native-preview": "^7.0.0-dev.20250716.1",
		"typescript": "^5.8.3"
	}
}
